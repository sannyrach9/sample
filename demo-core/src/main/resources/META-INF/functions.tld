        <function-class>com.demoorg.demo.wcm.tags.functions.UtilityFunctions</function-class>
        <function-signature>
            java.lang.String getRedirectUrl( com.day.cq.wcm.api.Page )
        </function-signature>
    </function>

    <function>
        <description>
            Returns true if the given page has been configured with a
