        <function-class>com.demoorg.demo.wcm.tags.functions.UtilityFunctions</function-class>
        <function-signature>
            java.lang.String getKeywords( com.day.cq.wcm.api.Page )
        </function-signature>
    </function>


    <function>
        <description>
            The title of the given page for use in the browser
            &lt;title&gt; tag
        </description>
        <name>getTitle</name>
        <function-class>com.demoorg.demo.wcm.tags.functions.UtilityFunctions</function-class>
        <function-signature>
            java.lang.String getTitle( com.day.cq.wcm.api.Page, java.lang.String )
