        <function-class>com.demoorg.demo.wcm.tags.functions.UtilityFunctions</function-class>
        <function-signature>
        	com.day.cq.wcm.api.Page getSiteRoot( com.day.cq.wcm.api.Page )
        </function-signature>
    </function>

